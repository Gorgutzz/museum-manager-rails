<h3>All Exhibits</h3>

<table>

  <% @exhibits.each do |exhibit| %>

  <tr>
    <td><%= exhibit.name exhibit_path(exhibit) %></td>
    <td><%= exhibit.origin exhibit_path(exhibit) %></td>
    <td><%= exhibit.age exhibit_path(exhibit) %></td>
    <td><%= exhibit.material exhibit_path(exhibit) %></td>
    <td><%= exhibit.open_date exhibit_path(exhibit) %></td>
    <td><%= exhibit.close_date exhibit_path(exhibit) %></td>
    <td><%= exhibit.culture exhibit_path(exhibit) %></td>
    <td><%= exhibit.exhibit_type exhibit_path(exhibit) %></td>
    <td><%= exhibit.description exhibit_path(exhibit) %></td>
    <td><%= exhibit.user.username%></td>
  </tr>

  <% end %>
</table>

<div style="display: inline-block;"><%= link_to "View all Museums", museums_path %></div>
<div style="display: inline-block;"><%= link_to "View all Exhibits", exhibits_path %></div>
<div style="display: inline-block;"><%= link_to "Add a New Exhibit", new_exhibit_path %></div>
<div style="display: inline-block;"><%= link_to "Back to Menu", user_path(current_user) %></div>
