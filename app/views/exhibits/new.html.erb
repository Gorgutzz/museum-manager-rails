<%= form_for @exhibit do |f| %>
<%= f.hidden_field :user_id, :value=> session[:user_id] %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :origin %>
    <%= f.text_field :origin %><br>

    <%= f.label :age %>
    <%= f.text_field :age %><br>

    <%= f.submit %>

<% end %>
