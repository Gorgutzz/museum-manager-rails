<%= form_for @exhibit do |f| %>
<%= f.hidden_field :user_id, :value=> session[:user_id] %>

<%= render :partial => 'application/error_messages', :locals => {:model => @exhibit} %>

    <% if @exhibit.errors[:museum_id].empty? %>
      <div class="wrapper">
    <% else %>
      <div class="field_with_errors">
    <% end %>
    <%= f.label :museum_id, "Choose Museum" %>
    <%= f.collection_select :museum_id, Museum.all, :id, :museum_name, prompt: true %><br><br>
    </div>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :origin %>
    <%= f.text_field :origin %><br>

    <%= f.label :age %>
    <%= f.text_field :age %><br>

    <%= f.label :material %>
    <%= f.text_field :material %><br>

    <%= f.label :culture %>
    <%= f.text_field :culture %><br>

    <%= f.label :exhibit_type %>
    <%= f.text_field :exhibit_type %><br>

    <%= f.label :open_date %>
    <%= f.date_field :open_date %><br>

    <%= f.label :close_date %>
    <%= f.date_field :close_date %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <% if @exhibit.errors[:transit_status_id].empty? %>
      <div class="wrapper">
    <% else %>
      <div class="field_with_errors">
    <% end %>
    <%= f.label :transit_status_id, "Transit Status" %>
    <%= f.collection_select :transit_status_id, TransitStatus.all, :id, :status, prompt: true %><br><br>
    </div>

    <%= f.submit "Submit" %>

<% end %>
