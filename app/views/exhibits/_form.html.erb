<%= form_for @exhibit do |f| %>
<%= f.hidden_field :user_id, :value=> session[:user_id] %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :origin %>
    <%= f.text_field :origin %><br>

    <%= f.label :age %>
    <%= f.text_field :age %><br>

    <%= f.label :material %>
    <%= f.text_field :material %><br>

    <%= f.label :culture %>
    <%= f.text_field :culture %><br>

    <%= f.label :exhibit_type %>
    <%= f.text_field :exhibit_type %><br>

    <%= f.label :open_date %>
    <%= f.date_field :open_date %><br>

    <%= f.label :close_date %>
    <%= f.date_field :close_date %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.submit "Submit" %>

<% end %>
