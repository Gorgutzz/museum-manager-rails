Exhibit Details:

Museum: <%= @exhibit.museum.museum_name %><br>
Name: <%= @exhibit.name %><br>
Origin: <%= @exhibit.origin %><br>
Age: <%= @exhibit.age %><br>
Material: <%= @exhibit.material %><br>
Culture: <%= @exhibit.culture %><br>
Exhibit Type: <%= @exhibit.exhibit_type %><br>
Description: <%= @exhibit.description %><br><br>
Open Date:<%= @exhibit.open_date %><br>
Close Date <%= @exhibit.close_date %><br><br>

<% if current_user == @exhibit.user %>
  <%= link_to "Edit Exhibit", edit_museum_exhibit_path(@exhibit.museum, @exhibit) if @exhibit.museum %><br>

  <%= link_to 'Delete Exhibit', exhibit_path(@exhibit),
      data: { confirm: 'Are you sure?' }, method: :delete %>
<% end %>
<br>

<div>
    <div style="display: inline-block;"><%= link_to "View all Museums", museums_path %></div>
    <div style="display: inline-block;"><%= link_to "View all Exhibits", exhibits_path %></div>
    <div style="display: inline-block;"><%= link_to "Add a New Exhibit", new_exhibit_path %></div>
    <div style="display: inline-block;"><%= link_to "Back to Menu", user_path(current_user) %></div>
</div>
