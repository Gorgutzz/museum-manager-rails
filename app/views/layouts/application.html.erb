<!DOCTYPE html>
<html lang="en">
  <title>Museum Manager</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1">
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
 <style>


   /* Set gray background color and 100% height */

   .home {
     background-color: ;

   }


   .sidenav {
     padding-top: 20px;
     background-color: #f1f1f1;
     height: 100%;
   }

   .bigimg {

   }

   .smallimg {

   }

   .header {
     font-size: 30px;
     padding-bottom: 15px;
     margin: 0 auto;
     background-color: #808080;
     height: 60px;
   }

   .wrapper {
     padding: 15px;
     margin: 0 auto;
     background-color: #808080;
   }

   .logout {
     font-size: 15px;
     padding-bottom: 10px;
   }

 </style>

<body class="container-fluid text-center">

     <!-- Top img -->

  <div class="bigimg">
      <img src="/images/acropolis.jpg" alt="acropolis" style="width: 50%">
  </div>

    <!-- Top Navbar -->

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        </button>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li><a href="#">Menu</a></li>
          <li><a href="#"><%= link_to "Exhibits", exhibits_path %></a></li>
          <li><a href="#"><%= link_to "Museums", museums_path %></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
        <%= submit_tag "Log Out" %>
          <% else %>
            <li><a href="#"><%= link_to "Login", login_path %></a></li>
            <li><a href="#"><%= link_to "Sign Up", signup_path %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

    <!-- left nav imgs -->

   <div class="col-sm-2 sidenav">
     <div class="well">
       <img src="/images/egyptian.jpg" alt="egyptian" style="width: 100%">
     </div>
     <div class="well">
       <img src="/images/flintlock.jpg" alt="flintlock" style="width: 100%">
     </div>
   </div>


   <div class="col-sm-8 text-center">
      <div class="wrapper">


     <!-- Header -->
     <header class="header">
       <span class="header">Museum Manager</span>
     </header>

    <div class="logout">
      <%= form_tag logout_path do %>
      <% if current_user %>
        <%= submit_tag "Log Out" %>
        <% end %>
      <% end %>
    </div>

    <%= yield %>

     </div>
   </div>


     <!-- right nav imgs -->

   <div class="col-sm-2 sidenav">
     <div class="well">
       <img src="/images/painting.jpeg" alt="painting" style="width: 100%">
     </div>
     <div class="well">
       <img src="/images/flintlock.jpg" alt="flintlock" style="width: 100%">
     </div>
   </div>
 </div>
</div>

</body>
</html>
